[Unit]
Description=Status Service ANE2
Wants=network-online.target
After=network-online.target

[Service]
User=anepi
Type=oneshot

WorkingDirectory=/home/anepi/SDR-SpectrumMonitoring-Sensor

ExecStartPre=/bin/bash -c 'until ping -c 1 -W 1 8.8.8.8; do echo "Waiting for internet..."; sleep 5; done'

ExecStart=/home/anepi/SDR-SpectrumMonitoring-Sensor/venv/bin/python3 status.py

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=status-ane2
